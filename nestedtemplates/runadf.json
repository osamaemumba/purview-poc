{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "utcValue": {
        "type": "string",
        "defaultValue": "[utcNow()]"
      },
      "location": {
        "type": "string",
        "metadata": {
          "description": "Specifies the Azure location where the identity will be created."
        }
      },
      "factoryName": {
        "type": "string"
      }
    },
    "variables": {
      "dsIdentityName": "dsId",
      "adfRG": "[resourceGroup().name]"
    },
    "resources": [
      {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2020-10-01",
        "name": "runAdfPipeline",
        "location": "[parameters('location')]",
        "kind": "AzurePowerShell",
        "dependsOn": [],
        "identity": {
          "type": "UserAssigned",
          "userAssignedIdentities": {
            "[resourceID('Microsoft.ManagedIdentity/userAssignedIdentities', variables('dsIdentityName'))]": {}
          }
        },
        "properties": {
          "forceUpdateTag": "[parameters('utcValue')]",
          "azPowerShellVersion": "6.0",
          "arguments": "[concat('-factoryName', ' ', concat('\\\"', parameters('factoryName'), '\\\"'), ' ', '-adfRG', ' ', concat('\\\"', variables('adfRG'), '\\\"'))]",
          "scriptContent": "param([string] $factoryName, [string] $adfRG)\n\rUpdate-Module -Name \"Az.Accounts\" -Force\n\rUpdate-Module -Name \"Az.DataFactory\" -Force\n\r$dataFactoryName=$factoryName\n\r$PipelineName=\"NYC_Pipeline\"\n\r$dataFactoryRG=$adfRG\n\rConnect-AzAccount -Identity\n\rInvoke-AzDataFactoryV2Pipeline -ResourceGroupName $dataFactoryRG -DataFactoryName $dataFactoryName -PipelineName $PipelineName",
          "timeout": "PT1H",
          "cleanupPreference": "OnSuccess",
          "retentionInterval": "P1D"
        }
      }
    ]
  }