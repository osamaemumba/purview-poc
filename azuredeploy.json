{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dlsName": {
      "type": "string",
      "defaultValue": "dls",
      "metadata": {
        "description": "Name for the data lake storage account."
      }
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue": "sa",
      "metadata": {
        "description": "Name for the storage account"
      }
    },
    "newOrExistingPurviewAccount": {
      "type": "string",
      "defaultValue": "new",
      "allowedValues": [
        "new",
        "existing"
      ],
      "metadata": {
        "description": "Create a new purview account or use an existing one"
      }
    },
    "purviewAccountName": {
      "type": "string",
      "defaultValue": "purv",
      "metadata": {
        "description": "Name for the purview account"
      }
    },
    "purviewResourceGroup": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Kindly provide the name of the resource group for the existing purview account"
      }
    },
    "keyVaultName": {
      "type": "string",
      "defaultValue": "kv",
      "metadata": {
        "description": "Name for the key vault account"
      }
    },
    "factoryName": {
      "type": "string",
      "defaultValue": "adf",
      "metadata": {
        "description": "Name for the azure Data Factory"
      }
    },
    "aadAppClientId": {
      "type": "string",
      "defaultValue": "48130c9e-fedc-459e-9524-68ada0e12829",
      "metadata": {
        "description": "The client Id of azure active directory app/service principal"
      }
    },
    "aadAppClientSecret": {
      "type": "securestring",
      "defaultValue": "khUke-~e.2R~K.LipRWXCR9Ex507EGM_4c",
      "metadata": {
        "description": "The client secret of azure active directory app/service principal"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location where the services/resources will be deployed"
      }
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('storageAccountName'),uniquestring(resourceGroup().id)))]",
    "dlsName": "[toLower(concat(parameters('dlsName'), uniquestring(resourceGroup().id)))]",
    "purviewAccountName": "[toLower(concat(parameters('purviewAccountName'),uniquestring(resourceGroup().id)))]",
    "keyVaultName": "[toLower(concat(parameters('keyVaultName'),uniquestring(resourceGroup().id)))]",
    "factoryName": "[toLower(concat(parameters('factoryName'),uniquestring(resourceGroup().id)))]"
  },
  "resources": [
    {
      "name": "keyVaultDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/keyvault.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "keyVaultName": {
                "value": "[variables('keyVaultName')]"
            },
            "aadAppClientSecret": {
                "value": "[parameters('aadAppClientSecret')]"
            }
        }
      }
    },
    {
      "name": "storageAccountDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/storageaccount.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "storageAccountName": {
                "value": "[variables('storageAccountName')]"
            }
        }
      }
    },
    {
      "name": "datalakeAccountDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/dlsaccount.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "dlsName": {
                "value": "[variables('dlsName')]"
            }
        }
      }
    },
    {
      "name": "datafactoryDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','datalakeAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','storageAccountDeployment')]"
    ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/dataFactory.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "factoryName": {
                "value": "[variables('factoryName')]"
            },
            "dlsName": {
                "value": "[variables('dlsName')]"
            },
            "storageAccountName": {
                "value": "[variables('storageAccountName')]"
            }
        }
      }
    },
    {
      "name": "datafactoryDeploymentScriptIdentityAndRole",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','datafactoryDeployment')]"
    ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/adfdeploymentscriptidentityandrole.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            }
        }
      }
    },
    {
        "name": "keyVaultPermissionsUpdate",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2018-05-01",
        "dependsOn": [
            "[resourceId('Microsoft.Resources/deployments','functionAppDeployment')]",
            "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
            "[resourceId('Microsoft.Resources/deployments','datafactoryDeploymentScriptIdentityAndRole')]"
        ],
        "properties": {
          "mode": "Incremental",
          "templatelink": {
            "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/keyvaultpermissionsupdate.json"
          },
          "parameters": {
              "location": {
                  "value": "[parameters('location')]"
              },
              "keyVaultName": {
                  "value": "[variables('keyVaultName')]"
              },
              "functionAppName": {
                  "value": "[reference('functionAppDeployment').outputs.functionAppName.value]"
              }
          }
        }
    },
    {
      "name": "runDataFactory",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
          "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
          "[resourceId('Microsoft.Resources/deployments','datafactoryDeploymentScriptIdentityAndRole')]",
          "[resourceId('Microsoft.Resources/deployments','keyVaultPermissionsUpdate')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/runadf.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "factoryName": {
                "value": "[variables('factoryName')]"
            }
        }
      }
    },
    {
      "condition": "[equals(parameters('newOrExistingPurviewAccount'),'new')]",
      "name": "purviewDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/purviewaccount.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            },
            "purviewAccountName": {
                "value": "[variables('purviewAccountName')]"
            }
        }
      }
    },
    {
      "name": "functionAppDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/functionapp.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            }
        }
      }
    },
    {
      "condition": "[equals(parameters('newOrExistingPurviewAccount'),'new')]",
      "name": "functionAppUpdateDeploymentWithNewPurviewAccount",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','purviewDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','storageAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','datalakeAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultPermissionsUpdate')]",
        "[resourceId('Microsoft.Resources/deployments','functionAppDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','runDataFactory')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/functionappupdate.json"
        },
        "parameters": {
          "aadAppClientId": {
              "value": "[parameters('aadAppClientId')]"
          },
          "storageAccountName": {
              "value": "[variables('storageAccountName')]"
          },
          "purviewAccountName": {
              "value": "[variables('purviewAccountName')]"
          },
          "keyVaultName": {
              "value": "[variables('keyVaultName')]"
          },
          "dlsName": {
              "value": "[variables('dlsName')]"
          },
          "newOrExistingPurviewAccount": {
              "value": "[parameters('newOrExistingPurviewAccount')]"
          },
          "purviewResourceGroup": {
              "value": "[parameters('purviewResourceGroup')]"
          }
        }
      }
    },
    {
      "condition": "[equals(parameters('newOrExistingPurviewAccount'),'existing')]",
      "name": "functionAppUpdateDeploymentWithExistingPurviewAccount",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','storageAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','datalakeAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultPermissionsUpdate')]",
        "[resourceId('Microsoft.Resources/deployments','functionAppDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','runDataFactory')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/functionappupdate.json"
        },
        "parameters": {
          "aadAppClientId": {
              "value": "[parameters('aadAppClientId')]"
          },
          "storageAccountName": {
              "value": "[variables('storageAccountName')]"
          },
          "purviewAccountName": {
              "value": "[parameters('purviewAccountName')]"
          },
          "keyVaultName": {
              "value": "[variables('keyVaultName')]"
          },
          "dlsName": {
              "value": "[variables('dlsName')]"
          },
          "newOrExistingPurviewAccount": {
              "value": "[parameters('newOrExistingPurviewAccount')]"
          },
          "purviewResourceGroup": {
              "value": "[parameters('purviewResourceGroup')]"
          }
        }
      }
    },
    {
      "condition": "[equals(parameters('newOrExistingPurviewAccount'),'new')]",
      "name": "triggerConfigurePurviewFunctionWithNewPurviewAccount",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','functionAppUpdateDeploymentWithNewPurviewAccount')]",
        "[resourceId('Microsoft.Resources/deployments','purviewDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','storageAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','datalakeAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultPermissionsUpdate')]",
        "[resourceId('Microsoft.Resources/deployments','functionAppDeployment')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/triggerconfigurepurviewfunctionurl.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            }
        }
      }
    },
    {
      "condition": "[equals(parameters('newOrExistingPurviewAccount'),'existing')]",
      "name": "triggerConfigurePurviewFunctionWithExistingPurviewAccount",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-05-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments','functionAppUpdateDeploymentWithNewPurviewAccount')]",
        "[resourceId('Microsoft.Resources/deployments','storageAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','datalakeAccountDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultDeployment')]",
        "[resourceId('Microsoft.Resources/deployments','keyVaultPermissionsUpdate')]",
        "[resourceId('Microsoft.Resources/deployments','functionAppDeployment')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templatelink": {
          "uri": "https://raw.githubusercontent.com/osamaemumba/purview-poc/adf/nestedtemplates/triggerconfigurepurviewfunctionurl.json"
        },
        "parameters": {
            "location": {
                "value": "[parameters('location')]"
            }
        }
      }
    }
  ]
}