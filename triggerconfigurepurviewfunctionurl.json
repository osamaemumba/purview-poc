{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
              "description": "Specifies the Azure location where the key vault should be created."
            }
          },
          "functionAppName": {
            "type": "string"
          },
          "configurePurviewFunctionName": {
            "type": "string"
          }
    },
    "variables": {
        "configurePurviewFunctionTriggerUrl": "[concat('http://', parameters('functionAppName'), '.azurewebsites.net/api/', parameters('configurePurviewFunctionName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "triggerConfigurePurviewFunction",
            "location": "[parameters('location')]",
            "kind": "AzurePowerShell",
            "dependsOn": [],
            "properties": {
              "forceUpdateTag": "[parameters('utcValue')]",
              "azPowerShellVersion": "5.0",
              "arguments": "[concat('-configurePurviewFunctionTriggerUrl', ' ', concat('\\\"', variables('configurePurviewFunctionTriggerUrl'), '\\\"'))]",
              "scriptContent": "Invoke-WebRequest $configurePurviewFunctionTriggerUrl",
              "timeout": "PT1H",
              "cleanupPreference": "OnSuccess",
              "retentionInterval": "P1D"
            }
          }
    ]
}